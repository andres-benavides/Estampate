<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>servlets</servlet-name>
    <servlet-class>com.estampate.corteI.servlet.servlets</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>guardarEstampa</servlet-name>
    <servlet-class>com.estampate.corteI.servlet.guardarEstampa</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlets</servlet-name>
    <url-pattern>/servlets</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>dirUploadFiles</param-name>
    <param-value>/estampas</param-value>
  </context-param>
  <context-param>
    <param-name>maxFileSize</param-name>
    <param-value>3000000</param-value>
  </context-param>
  <servlet-mapping>
    <servlet-name>guardarEstampa</servlet-name>
    <url-pattern>/guardarEstampa</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <description>Location to store uploaded file</description>
    <param-name>file-upload</param-name>
    <param-value>
      \estampas
    </param-value>
  </context-param>
</web-app>
