    <mapping resource="com/estampate/corteI/hibernate/ColorCamiseta.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/FormaPago.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/PrecioEstampa.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/TextoCamiseta.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/Comprador.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/Factura.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/Stock.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/TemaEstampa.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/EstampaCamiseta.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/Artista.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/TamanoEstampa.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/MaterialCamiseta.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/TallaCamiseta.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/RatingEstampa.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/FacturaDetalle.hbm.xml"/>
    <mapping resource="com/estampate/corteI/hibernate/Administrador.hbm.xml"/>
